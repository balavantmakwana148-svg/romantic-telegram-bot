import os
import logging
import re
import requests
from telegram import Update
from telegram.ext import ApplicationBuilder, CommandHandler, MessageHandler, ContextTypes, filters

BOT_TOKEN = os.getenv("BOT_TOKEN")
HF_TOKEN = os.getenv("HF_TOKEN")
AI_URL = "https://api-inference.huggingface.co/models/ai4bharat/indic-gpt"
HEADERS = {"Authorization": f"Bearer {HF_TOKEN}"}

FORBIDDEN = ["sex", "nude", "xxx", "porn", "fuck", "chumma", "sambhog"]
logging.basicConfig(level=logging.INFO)
logger = logging.getLogger(__name__)

def clean_text(text: str) -> str:
    for w in FORBIDDEN:
        text = re.sub(w, "***", text, flags=re.IGNORECASE)
    return text

def ai_reply(prompt: str) -> str:
    try:
        data = {"inputs": prompt}
        res = requests.post(AI_URL, headers=HEADERS, json=data, timeout=15)
        if res.status_code == 200:
            out = res.json()
            if isinstance(out, list) and "generated_text" in out[0]:
                return clean_text(out[0]["generated_text"])
        return "Hmm... samajh nahi aaya, phir se batao na 💕"
    except Exception as e:
        logger.error(e)
        return "Lagta hai AI so gaya hai 😅"

async def start(update: Update, context: ContextTypes.DEFAULT_TYPE):
    await update.message.reply_text(
        "Heyy 💖 Main tumhara Hindi Romantic AI bot hoon!\nKuch bhi likho aur main pyare andaaz me jawab dunga 😍"
    )

async def stop(update: Update, context: ContextTypes.DEFAULT_TYPE):
    await update.message.reply_text("Bye 💖 Jab chahe wapas /start likh dena!")

async def handle(update: Update, context: ContextTypes.DEFAULT_TYPE):
    text = update.message.text.strip()
    if any(bad in text.lower() for bad in FORBIDDEN):
        await update.message.reply_text("Thoda pyar se baat karo na 💞")
        return

    prompt = f"Hindi me romantic aur flirty style me jawab do bina vulgar hua. User: {text}"
    reply = ai_reply(prompt)
    await update.message.reply_text(reply)

def main():
    app = ApplicationBuilder().token(BOT_TOKEN).build()
    app.add_handler(CommandHandler("start", start))
    app.add_handler(CommandHandler("stop", stop))
    app.add_handler(MessageHandler(filters.TEXT & (~filters.COMMAND), handle))
    logger.info("Bot chal raha hai...")
    app.run_polling()

if __name__ == "__main__":
    main()# romantic-telegram-bot
